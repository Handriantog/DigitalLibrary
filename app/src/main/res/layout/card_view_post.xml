<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textViewJudulCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="Judul"
                android:textSize="30sp" />

            <View
                android:id="@+id/viewGaris"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/textViewJudulCard"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/textViewKategoriCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewGaris"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="Kategori" />


            <TextView
                android:id="@+id/textViewJumlahPoinCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewKategoriCard"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="Jumlah Poin" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>